<%= render 'layouts/errors', obj: @list %>
<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>ユーザー情報</h2>
      <%= render 'info', user: @user %>
      <% if current_user == @user %>
      <p><%= link_to"お気に入り記事",favorites_user_path(@user) %></p>
      <% end %>

<!-- ユーザーの新規投稿 -->
      <h4 class="mt-3">新しい投稿</h4>
      <%= render '/public/lists/new', lists: @list %>
    </div>
<!-- ユーザーの投稿一覧 -->
    <div class='col-md-8 offset-md-1'>
      <%= render 'shares/lists/list', lists: @lists %>
    </div>
  </div>
</div>