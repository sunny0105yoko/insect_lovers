<%= render 'layouts/errors', obj: @user %>

<div class= "container">
  <div class='row'>
    <h2>プロフィール編集</h2>
  </div>
    <div class='row'>
      <%= form_with model: @user do |f| %>
        <label for="inputName">ユーザー名</label>
        <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"ニックネーム"%>
        <label for="inputImage">プロフィール画像</label>
        <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>  
        <%= f.submit "更新" %></br>
        <%= link_to "戻る", users_path %>
      <% end %>
    </div>
</div>