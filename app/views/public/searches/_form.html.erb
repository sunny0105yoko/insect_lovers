<div class="d-flex justify-content-center mb-2">
            <%= form_with url: searches_search_path, local: true, method: :get do |f| %>
              <%= f.text_field :word, value: params[:word] %>
              <%= f.select :range, options_for_select([['ユーザー', 'User'], ['投稿', 'List']], selected: params[:range]) %>
              <%= f.select :search, options_for_select([["完全一致","perfect_match"], ["前方一致","forward_match"],  ["後方一致","backward_match"], ["部分一致","partial_match"]], selected: params[:search]) %>
              <%= f.submit "検索", class: "btn btn-primary" %>
          <% end %>
</div>