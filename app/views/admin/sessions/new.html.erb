<div class="container">
  <div class="row">
    <h3 class="mt-4">管理者ログイン</h3>
  </div>
    <div>
    <%= form_with model: @admin, url: admin_session_path do |f| %>

      <div class="form-group row offset-1 mt-4">
        <div class="col-lg-2">
        <%= f.label :email, "メールアドレス" %>
        </div>
          <div class="col-lg-5">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", size:50 %>
          </div>
      </div>

      <div class="form-group row offset-1">
        <div class="col-lg-2">
        <%= f.label :password, "パスワード" %>
        </div>
          <div class="col-lg-5">
            <%= f.password_field :password, autocomplete: "current-password", size:50 %>
          </div>
      </div>

      <div class="form-group row offset-3">
        <div class="col-lg-2">
          <%= f.submit "ログイン", class: 'btn btn-green' %>
        </div>
      </div>
    <% end %>

    <%= render "admin/shared/links" %>

  </div>
</div>
