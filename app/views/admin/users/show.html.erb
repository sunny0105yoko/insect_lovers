<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>ユーザー情報</h2>
      <table class='table'>
        <tr><%= image_tag @user.get_profile_image, class:'profile_image', style: 'width: 100%; height: 250px; object-fit: cover;' %></tr>
        <tr>
	      <th>ユーザー</th>
	      <th><%= @user.name %></th>
        </tr>
        <tr>
	      <th>メールアドレス</th>
	      <th><%= @user.email %></th>
        </tr>
      </table>
    </div>
    <div class='col-md-8 offset-md-1'>
      <%= render '/admin/lists/lists', lists: @lists %>
    </div>
  </div>
</div>


